<Window x:Class="MiniProjectGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cyber Awareness Bot" Height="500" Width="400"
        ResizeMode="CanResizeWithGrip"
        Background="#444444"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Row 0: History button -->
            <RowDefinition Height="*"/>
            <!-- Row 1: Chat display -->
            <RowDefinition Height="Auto"/>
            <!-- Row 2: Input area -->
        </Grid.RowDefinitions>

        <!-- 🔹 Top-left "View History" button -->
        <Button Content="View Chat History"
                Grid.Row="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="100"
                Height="30"
                Margin="0,0,0,5"
                Click="ViewHistory_Click"
                Background="#fab0f0"
                Foreground="White"/>

        <!-- 🔹 Chat Display -->
        <ListBox x:Name="ChatListBox"
                 Grid.Row="1"
                 Background="#999999"
                 Foreground="White"
                 BorderBrush="Gray"
                 Margin="0,0,0,10"
                 FontSize="14"
                 ScrollViewer.VerticalScrollBarVisibility="Auto" />

        <!-- 🔹 User Input Area -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    Margin="0">
            <TextBox x:Name="UserInputTextBox"
                     Width="300"
                     Height="44"
                     VerticalContentAlignment="Center"
                     FontSize="14"
                     Margin="0,0,5,0" />

            <Button x:Name="SendButton"
                    Content="Send"
                    Width="60"
                    Height="30"
                    Click="SendButton_Click"
                    Background="#fab0f0"
                    Foreground="White" />
        </StackPanel>
    </Grid>
</Window>
