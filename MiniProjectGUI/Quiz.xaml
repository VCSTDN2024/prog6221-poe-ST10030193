<Window x:Class="MiniProjectGUI.Quiz"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiniProjectGUI"
        mc:Ignorable="d"
        Title="Quiz" Height="450" Width="800">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <TextBlock Text="Cyber Awareness Quiz" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" />

                <!-- Repeat this Grid for each question -->
                <StackPanel x:Name="QuizPanel" />
                
                <Button Content="Submit" Click="Submit_Click" Margin="0,20,0,0" Padding="10,5" HorizontalAlignment="Left"/>
                <Button Content="Retake Quiz" Click="RetakeQuiz_Click" Margin="0,20,0,0" Padding="10,5" HorizontalAlignment="Left" />
                <TextBlock x:Name="ResultText" FontSize="16" FontWeight="Bold" Foreground="Green" Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
